<%= form_with(model: @user,url: "/admin_create", method: :post,id: 'form_name', remote: true, local: false) do |f| %>
  <div id="error_explanation" hidden style="margin-bottom: 20px;"></div>
    <div class="modal-header" >
      <h4 class="modal-title" id="myModalLabel">Add new User</h4>
      <div class="validation-error"></div>
      <button type="button" class="close" data-dismiss="modal">x</button>
    </div>
    
    
    <div class="form-group">
      <%= f.label :name,{ class: "col-3 col-form-label"} %>
      <div class="col-10">
        <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "form-control shadow rounded" %>
      </div>
    </div>

    <div class="form-group ">
    <%= f.label :email ,{ class: "col-3 col-form-label"}%>
    <div class="col-10">
      <%= f.text_field :email, autofocus: true, autocomplete: "email",class: "form-control shadow rounded" %>
      </div>
    </div>

    <div class="form-group"  >
          <%= f.label :Gender,{ class: "fi col-3 col-form-label"} %> 
          <div style="transform:translate(5%);">
            <%= f.radio_button :gender, "male" %>&nbsp<%= f.label :Male  %>  &nbsp                                                                                                                                                                        
            <%= f.radio_button :gender, "female"%>&nbsp<%= f.label :Female%>   &nbsp                                                                                                                                                                   
            <%= f.radio_button :gender, "others" %>&nbsp<%= f.label :Others%> &nbsp
          </div>
      </div>

    <div class="form-group ">
      <%= f.label :phone ,{ class: "col-3 col-form-label"}%>
      <div class="col-10">
        <%= f.text_field :phone,class: "form-control shadow rounded"%>
      </div>
    </div>

    <div class="form-group ">
    <div class="col-5 col-form-label">
    <%= f.label :password%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %></div>
    <div class="col-10">
      <%= f.password_field :password, autocomplete: "new-password",class: "form-control shadow rounded" %>
    </div>
    </div>

    <div class="form-group ">
    <%= f.label :password_confirmation ,{ class: "col-5 col-form-label"}%><br />
    <div class="col-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control shadow rounded" %>
    </div>
    </div>
    <div class="form-group ">
    <%= f.label :Admin,{ class: "col-3 col-form-label"}%>
    <%= f.check_box(:is_admin, options = {:checked => true}, checked_value =  :true, unchecked_value = :false) %>
    </div>
    <div class="form-group ">
    <%= f.label :cover_picture ,{ class: "col-3 col-form-label"}%>
    <div class="col-10">
      <%= f.file_field :cover_picture,class: "form-control shadow rounded"%>
    </div>
    </div>

  </div>
  <div class="modal-footer">
    <div style="text-align:center">
      <%= f.submit "Create a new User", :class => "justify-content-center btn btn-outline-success btn-lg bst" %>
    </div>
  </div>
<% end %>
