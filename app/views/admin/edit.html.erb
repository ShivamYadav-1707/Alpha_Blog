
<div id="page-content">
  <h1 class="text-center mt-4">Edit User</h1>
</div>
<div class="row justify-content-center">
  <div class="col-5 shadow p-3 mb-6 bg-light rounded">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>
<div class="row justify-content-center">

  <div class="col-5 shadow p-3 mb-6 bg-light rounded">
  <div class="mb-2">
   

    <%= form_with(model: @user,url: "/admin_update/#{@user.id}",method: :post,local: true) do |form|%>
      <div id="error_messages"></div>
      <%if @user.errors.any?%>
      <div class="alert alert-danger">
          <% @user.errors.full_messages.each do |message|%>
          <div style="color:red;">
              <%=message%>
          </div>
          <%end%>
      </div>
      <%end%>
      <br>

      <div class="form-group">
          <%= form.label :Name,{ class: "col-3 col-form-label"}%>
          <div class="col-10">
              <%= form.text_field :name,autofocus: true, autocomplete: "name",class: "form-control shadow rounded"%>
          </div>
      </div>

      <div class="form-group ">
          <%= form.label :Email,{ class: "col-3 col-form-label"} %>
          <div class="col-10">
              <div class="form-control shadow rounded">
                  <%=@user.email%>
              </div>
          </div>
      </div>

      <div class="form-group">
          <%= form.label :Gender,{ class: "col-3 col-form-label"} %>
          <div class="col-10">
              <div class= "form-control shadow rounded">
                  <%= form.radio_button :gender, "male" %>&nbsp;Male &nbsp;
                  <%= form.radio_button :gender, "female" %>&nbsp;Female &nbsp;
                  <%= form.radio_button :gender, "others" %>&nbsp;Others &nbsp;
              </div>
          </div>
      </div>
      
      <div class="form-group ">    
          <%= form.label :phone ,{ class: "col-3 col-form-label"} %>
          <div class="col-10">
              <%= form.text_field :phone,class: "form-control shadow rounded"%>
          </div>
      </div>
        

      <div class="form-group ">
        <%= form.label :cover_picture,{ class: "col-3 col-form-label"}%>
        <div class="col-10">
          <%= form.file_field :cover_picture%>
        </div>
      </div>
      <div class="form-group ">
        <div class="text-align:center">
          <%= form.submit "Update", :class => "justify-content-center btn btn-outline-success btn-lg bst" %>
        </div>
      </div>


    <% end %>
    </div>
    <div style="text-align:center">
        <h3><%= link_to "Back", :back %></h3>
    </div>
  </div>  
</div>   